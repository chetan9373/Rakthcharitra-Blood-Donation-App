<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/finalprofil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="298dp"

            android:orientation="vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp">


            <Button
                android:id="@+id/backbtn"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_baseline_arrow_back_24"
                app:backgroundTint="@color/design_default_color_error" />


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="195dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="82dp"
                android:layout_marginTop="-9dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/img12"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dprof1"
                    android:layout_width="190dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="35dp"
                    android:layout_weight="1"
                    android:src="@drawable/search" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/dname1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"/>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
android:layout_marginTop="-1dp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dtype1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/textviewbg"
                    android:paddingLeft="15dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="5dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
            <Button
                android:id="@+id/sendmsg"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/inpuut_bg"
                android:text="send message"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="@color/design_default_color_error" />
            <LinearLayout
                android:layout_marginTop="-15dp"
                android:layout_width="355dp"
                android:layout_height="37dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="            Gender"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dgender1"
                    android:layout_width="120dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:background="@drawable/textviewbg"
                    android:paddingLeft="15dp"
                    android:paddingTop="3dp"

                    android:paddingBottom="5dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="355dp"
                android:layout_height="37dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="            Contact"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dcontact1"
                    android:layout_width="120dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:background="@drawable/textviewbg"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="355dp"
                android:layout_height="37dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="            Availability"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/davailable1"
                    android:layout_width="143dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:background="@drawable/textviewbg"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="355dp"
                android:layout_height="37dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="            Location"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dLocation1"
                    android:layout_width="125dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:background="@drawable/textviewbg"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="355dp"
                android:layout_height="37dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="            Pick up/Drop"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/drop1"
                    android:layout_width="152dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:background="@drawable/textviewbg"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
