    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bcgn">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/propic"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="82dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="36dp"
                android:background="@drawable/spiral"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dprof1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1" />

            </LinearLayout>


            <TextView
                android:id="@+id/dname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"

                android:fontFamily="@font/rubik_medium"
                android:textColor="@color/red"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/propic" />

            <TextView
                android:id="@+id/donor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/rubik_medium"
                android:hint="@string/donor"
                android:textColorHint="@color/red"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dname1" />


            <EditText
                android:id="@+id/dtype1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/custom_edittext_white"
                android:elevation="5dp"
                android:fontFamily="@font/rubik_regular"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textColorHint="@color/red"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/donor"
                tools:ignore="RtlSymmetry,TextFields" />


            <LinearLayout
                android:id="@+id/pgen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="170dp"
                android:background="@drawable/my_ripple_effect"
                android:elevation="5dp"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dtype1"
                app:layout_constraintVertical_bias="0.1">

                <TextView
                    android:layout_width="wrap_content"
