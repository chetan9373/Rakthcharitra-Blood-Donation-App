<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    >
    <LinearLayout
        android:layout_width="353dp"
        android:layout_height="128dp"

        android:layout_marginLeft="28dp"

        android:background="@drawable/textviewbg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/plsmadicon"
                android:layout_width="50dp"
                android:layout_height="match_parent"

                android:drawableLeft="@drawable/fblood1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/plsmadtext"
                android:layout_width="110dp"
                android:layout_height="match_parent"


                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/plsmalocicon"
                android:layout_width="50dp"
                android:layout_height="match_parent"

                android:drawableLeft="@drawable/floc"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/plsmadloctext"
                android:layout_width="110dp"
                android:layout_height="match_parent"


                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/psmagendericon"
                android:layout_width="50dp"
                android:layout_height="match_parent"

                android:drawableLeft="@drawable/proob"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/psmagendertext"
                android:layout_width="110dp"
                android:layout_height="match_parent"


                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dpcontacticon"
                android:layout_width="50dp"
                android:layout_height="match_parent"

                android:drawableLeft="@drawable/fcon"
                android:textAlignment="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/dpcontacttext"
                android:layout_width="110dp"
                android:layout_height="match_parent"


                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dpallergyicon"
                android:layout_width="50dp"
                android:layout_height="match_parent"

                android:drawableLeft="@drawable/proob"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/dpallergytext"
                android:layout_width="110dp"
                android:layout_height="match_parent"


                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dpmedicon"
                android:layout_width="50dp"
                android:layout_height="match_parent"

                android:drawableLeft="@drawable/fmed"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/dpmedtext"
                android:layout_width="110dp"
                android:layout_height="match_parent"


                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>