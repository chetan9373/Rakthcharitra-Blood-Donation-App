<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bcgn">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="130dp">

            <TextView
                android:id="@+id/reg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/rubik_medium"
                android:text="@string/reg"
                android:textColor="@color/red"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/profession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/rubik_regular"
                android:text="@string/profession"
                android:textColor="@color/red"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@id/reg2"

                tools:ignore="MissingConstraints" />


            <Spinner
                android:id="@+id/professionspinner"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/custom_spinner"
                android:elevation="5dp"
                app:layout_constraintTop_toBottomOf="@id/profession" />

            <EditText
                android:id="@+id/dateofbirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/custom_edittext_white"
                android:clickable="false"
                android:cursorVisible="false"
                android:editable="false"
                android:elevation="5dp"
                android:fontFamily="@font/rubik_regular"
                android:hint="@string/datebirth"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="@color/red"
                android:textColorHint="@color/red"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/professionspinner"
                tools:ignore="RtlSymmetry,TextFields" />


            <TextView
                android:id="@+id/lastblood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/rubik_regular"
                android:text="@string/lastblood"
                android:textColor="@color/red"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@id/dateofbirth"

                tools:ignore="MissingConstraints" />


            <Spinner
                android:id="@+id/bloodspinners"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/custom_spinner"
                android:elevation="5dp"
                app:layout_constraintTop_toBottomOf="@id/lastblood" />

            <TextView
                android:id="@+id/lastplatelate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/rubik_regular"
                android:text="@string/lastplat"
                android:textColor="@color/red"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@id/bloodspinners"

                tools:ignore="MissingConstraints" />


            <Spinner
                android:id="@+id/plateletsspinners"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/custom_spinner"
                android:elevation="5dp"
                app:layout_constraintTop_toBottomOf="@id/lastplatelate" />

            <TextView
                android:id="@+id/smoke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/rubik_regular"
                android:text="@string/smoke"
                android:textColor="@color/red"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@id/plateletsspinners"

                tools:ignore="MissingConstraints" />


            <Spinner
                android:id="@+id/smokerspineer"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/custom_spinner"
                android:elevation="5dp"
                app:layout_constraintTop_toBottomOf="@id/smoke" />

            <EditText
                android:id="@+id/lastblodddonatedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/custom_edittext_white"
                android:clickable="false"
                android:cursorVisible="false"
                android:editable="false"
                android:elevation="5dp"
                android:fontFamily="@font/rubik_regular"
                android:hint="@string/lastblooddate"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="@color/red"
                android:textColorHint="@color/red"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/smokerspineer"
                tools:ignore="RtlSymmetry,TextFields" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/next2"
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_button_red"
                android:elevation="5dp"
                android:fontFamily="@font/rubik_medium"
                android:text="@string/next2"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lastblodddonatedate" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
